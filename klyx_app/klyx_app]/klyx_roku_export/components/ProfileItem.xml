<?xml version="1.0" encoding="utf-8" ?>
<component name="ProfileItem" extends="Group">
  <interface>
    <field id="itemContent" type="node" onChange="onContentChange" />
    <field id="width" type="float" onChange="onWidthChange"/> 
    <field id="height" type="float" onChange="onHeightChange"/> 
    <field id="focusPercent" type="float" onChange="onFocusPercentChange" />
  </interface>

  <script type="text/brightscript" uri="pkg:/components/ProfileItem.brs" />

  <children>
    <!-- Background Square (Color blocks like in screenshot) -->
    <Rectangle 
        id="bgColor" 
        width="180" 
        height="180" 
        translation="[10, 10]" 
        color="0x333333FF" />
        
    <!-- Initials Label (Centered in square) -->
    <Label 
        id="initialsLabel" 
        width="180" 
        height="180" 
        translation="[10, 10]" 
        horizAlign="center" 
        vertAlign="center"
        font="font:LargeBoldSystemFont" 
        color="0xFFFFFFFF" 
        text="" />

    <!-- Avatar Image (Overlay if available) -->
    <Poster 
        id="avatar" 
        width="180" 
        height="180" 
        translation="[10, 10]" 
        loadDisplayMode="scaleToFit" 
        visible="false" />
        
    <!-- Name Label (Below square) -->
    <Label 
        id="name" 
        width="200" 
        translation="[0, 200]" 
        horizAlign="center" 
        font="font:MediumSystemFont" 
        color="0xAAAAAAFF" />
        
    <!-- Focus Ring (Outer border) -->
    <Rectangle 
        id="focusRing" 
        width="190" 
        height="190" 
        translation="[5, 5]" 
        color="0xFFFFFFFF" 
        filled="false" 
        lineThickness="5" 
        visible="false" />
  </children>
</component>
